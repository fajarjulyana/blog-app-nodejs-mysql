<script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
<h1>Edit Post</h1>
<form action="/posts/edit/<%= post.id %>" method="POST">
    <input type="text" name="title" placeholder="Post Title" value="<%= post.title %>" required class="form-control"><br>
    <input type="text" name="thumbnail" placeholder="Thumbnail URL"><br><br>
    <textarea name="content" id="editor" required class="form-control"><%= post.content %></textarea><br>
    <button type="submit" class="btn btn-success">Update Post</button>
</form>
<script>
    CKEDITOR.replace('editor');
</script>
